# Archivo de configuración de ejemplo para el backend
# Copiar este archivo como application-secrets.properties y configurar con tus valores

# Configuración de Base de Datos PostgreSQL
DATASOURCE_URL=jdbc:postgresql://localhost:5432/ecommerce
DATASOURCE_USERNAME=postgres
DATASOURCE_PASSWORD=tu_password_aqui

# Configuración JWT
JWT_SECRET=tu_clave_secreta_jwt_muy_larga_y_segura_aqui

# Tamaños máximos de archivos
TAM_MAXIMO_ARCHIVO=10MB
TAM_MAXIMO_PETICION=10MB

# Notas:
# - Cambiar los valores de producción antes de desplegar
# - Mantener este archivo fuera del control de versiones
# - El JWT_SECRET debe ser una cadena larga y aleatoria
